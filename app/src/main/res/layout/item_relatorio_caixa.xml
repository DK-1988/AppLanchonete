<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvDataAberturaCaixa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2025 10:00"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvStatusCaixa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fechado"
                android:textStyle="italic"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvUsuarioCaixa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuário: admin"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDinheiroCaixa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinheiro: R$ 0,00"
            android:textColor="#2E7D32"/> <TextView
        android:id="@+id/tvPixCaixa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIX: R$ 0,00"
        android:textColor="#0091EA"/> <TextView
        android:id="@+id/tvCreditoCaixa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crédito: R$ 0,00"/>

        <TextView
            android:id="@+id/tvDebitoCaixa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Débito: R$ 0,00"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:text="Total Vendas: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTotalVendasCaixa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 0,00"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>