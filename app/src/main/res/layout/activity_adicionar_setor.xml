<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AdicionarSetorActivity">

    <TextView
        android:id="@+id/tvTituloFormularioSetor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo Setor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNomeSetor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Setor (ex: Bebidas)"
            android:inputType="textCapWords"/> </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSalvarSetor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Setor"
        android:padding="12dp"
        android:textSize="18sp"/>

</LinearLayout>