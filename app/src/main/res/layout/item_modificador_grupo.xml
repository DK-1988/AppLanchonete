<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_borda"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"> <TextView
    android:id="@+id/tvNomeGrupo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Nome do Grupo (ex: Tamanhos)"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvTipoSelecaoGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleção Múltipla"
            android:textSize="14sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvContagemOpcoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Opções"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>