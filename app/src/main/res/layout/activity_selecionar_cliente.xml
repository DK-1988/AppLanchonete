<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SelecionarClienteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar Cliente"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:iconifiedByDefault="false"
        app:queryHint="Buscar por nome ou CPF/CNPJ..."/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSelecionarCliente"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_selecionar_cliente" /> </LinearLayout>