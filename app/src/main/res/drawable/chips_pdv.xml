<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#B22222" /> <!-- vermelho BK -->
            <corners android:radius="24dp" />
            <padding android:left="10dp" android:top="6dp" android:right="10dp" android:bottom="6dp" />
        </shape>
    </item>

    <!-- pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#991919" />
            <corners android:radius="24dp" />
            <padding android:left="10dp" android:top="6dp" android:right="10dp" android:bottom="6dp" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF8E1" /> <!-- tom amarelo claro -->
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#B22222" />
            <padding android:left="10dp" android:top="6dp" android:right="10dp" android:bottom="6dp" />
        </shape>
    </item>
</selector>
